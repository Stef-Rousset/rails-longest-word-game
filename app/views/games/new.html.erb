<h1>new game</h1>
<div class="letters">
<% @letters.each do |letter| %>
      <p><%= letter %></p>
      <% end %>
</div>
<p>What is the longest word you can find ?</p>
<form action="/score" method="POST">
  <input type="text" name="word" id="text" placeholder= "Enter your word">
  <input type="submit" value="Play" id="button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %> <!-- ajoute @letters dans les params -->

</form>
